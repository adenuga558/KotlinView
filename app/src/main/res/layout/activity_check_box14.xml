<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBox.CheckBoxActivity14">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox"
        android:checked="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/enableCheckBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Enable CheckBox"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/checkBox"/>

    <Button
        android:id="@+id/disableCheckBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Disable CheckBox"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/enableCheckBtn"/>


</androidx.constraintlayout.widget.ConstraintLayout>